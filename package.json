{
  "name": "@ktsstudio/mediaproject-vk",
  "version": "1.2.1",
  "author": "KTS Studio",
  "license": "MIT",
  "description": "Package with utils for vk mini apps",
  "keywords": [
    "vk",
    "vkontakte",
    "vk-mini-app",
    "vk-bridge"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/types/index.d.ts",
  "scripts": {
    "rm-build": "rm -rf dist",
    "lint": "eslint src --fix",
    "codestyle": "prettier --write \"src/**/*.{ts,js}?(x)\"",
    "tsc-check": "tsc --skipLibCheck --noEmit --project tsconfig.json",
    "build": "yarn run rm-build; tsc --module es6 --target es6 --outDir dist --declarationDir dist/types",
    "build:cjs": "yarn run rm-build; tsc --module commonjs --target es5 --outDir dist --declarationDir dist/types",
    "precommit": "lint-staged",
    "docs": "rm -rf docs && typedoc --options typedoc.json"
  },
  "lint-staged": {
    "*.{ts,js}?(x)": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "files": [
    "dist/",
    "package.json",
    "README.md",
    "CHANGELOG.md",
    "logo.png"
  ],
  "devDependencies": {
    "@types/node": "^16.4.0",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "husky": "^7.0.1",
    "lint-staged": "^11.0.0",
    "prettier": "^2.2.1",
    "react": "^17.0.2",
    "typedoc": "^0.22.11",
    "typedoc-github-wiki-theme": "^1.0.0",
    "typedoc-plugin-markdown": "^3.11.12",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@ktsstudio/mediaproject-utils": "^4.0.0",
    "@vkontakte/vk-bridge": "^2.4.4"
  },
  "peerDependencies": {
    "react": "^17.0.2"
  }
}
